<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_Correspendances"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/ic_menu_crop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <TextView
        android:id="@+id/txtBusCorrespendances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus..."
        android:textSize="25sp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBottom="@+id/imageView_Correspendances"
        android:layout_toRightOf="@+id/imageView_Correspendances"
        android:layout_toEndOf="@+id/imageView_Correspendances"
        android:layout_marginBottom="14dp" />

</RelativeLayout>